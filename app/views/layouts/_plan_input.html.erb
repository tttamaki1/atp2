<div class="input">
  <h2 class="cursor-pointer"><%= t(:provide_your_travel_choice) %></h2>
  <%= form_with model: @plan, url: open_ai_create_path, class: 'plan-input-form', remote: true do |form| %>
    <div class="form-group">
      <%= form.text_field :destination, placeholder: t(:destination) ,class: 'form-control', id: 'destination-input' %>
    </div>
    <div class="form-group">
      <%= form.text_field :place_to_visit, placeholder: t(:place_to_visit), class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= form.hidden_field :duration, id: "day-slider-value" %>
      <div class="slider-wrapper">
        <%#= form.label :duration, t(:duration) %>
        <div id="day-slider" data-min="1" data-max="7" data-value="1"></div>
        <span id="day-slider-display">1</span> 
        <%= t(:days) %>
      </div>
    </div>

    <div class="form-group">
      <%= form.label :activity, t(:activity_id) %>
      <%= form.collection_select(:activity_id, Activity.all, :id, :translated_name, {}, { class: "select-control", id: "activity" }) %>
    </div>
    <div class="form-group">
      <%= form.label :food_id, t(:food_id) %>
      <%= form.collection_select(:food_id, Food.all, :id, :translated_name, {}, { class: "select-control", id: "food" }) %>
    </div>
    <div class="form-group">
      <%= form.label :travel_style_id, t(:travel_style_id) %>
      <%= form.collection_select(:travel_style_id, TravelStyle.all, :id, :translated_name, {}, { class: "select-control", id: "travel_style" }) %>
    </div>
    <div class="form-group hidden">
      <%= form.label :accommodation_id, t(:accommodation_id) %>
      <%= form.collection_select(:accommodation_id, Accommodation.all, :id, :translated_name, {}, { class: "select-control", id: "accommodation" }) %>
    </div>
    <div class="form-group hidden">
      <%= form.label :transportation_id, t(:transportation_id) %>
      <%= form.collection_select(:transportation_id, Transportation.all, :id, :translated_name, {}, { class: "select-control", id: "transportation" }) %>
    </div>
    <%= form.submit t(:create_plan), class: 'submit-button hidden' %>
  <% end %>
</div>
