<div class="input">
    <h2 class="cursor-pointer"><%= t(:provide_your_hotel_preferences) %></h2>
    <%= form_with model: @plan, url: open_ai_create_path, class: 'plan-input-form', remote: true do |form| %>
      <div class="form-group">
        <%= form.text_field :destination, placeholder: t(:destination), class: 'form-control', id: 'destination-input' %>
      </div>

      <div class="form-group">
        <%= form.text_field :date, placeholder: t(:calender), class: 'datepicker form-control', readonly: "" %>
      </div>

      <div class="form-group">
        <%#= form.check_box :budget_option, { checked: true }, class: 'budget-option', id: 'budget-option' %>
        <span class="cursor-pointer"><%= t(:budget_option) %></span>
        <div id="budget-input">
          <%= form.range_field :budget, id: "budget-slider" %>
          <span id="budget-slider-value">10,000</span> <%= t(:currency) %>
        </div>
      </div>
  
      <div class="form-group hidden">
        <%= form.label :accommodation_id, t(:accommodation_id) %>
        <%= form.collection_select(:accommodation_id, Accommodation.all, :id, :translated_name, {}, { class: "select-control", id: "accommodation" }) %>
      </div>
      <%= form.submit t(:get_recommendation_for_hotel_btn), class: 'submit-button hidden' %>
    <% end %>
  </div>
  